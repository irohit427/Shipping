<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<title>Shipping</title>
<style>
form {
    width: 100%;
    margin-left: 15%;
    margin-bottom: 10%;
    margin-top: 5%;
}
</style>
<div class="container">
    <h1 class="text-center">Shipping Form</h1>
    <div class="form-group">
        <h2>Form ID : <%= form_id%></h2>
    </div>
    <form class="form-horizontal col-sm-10" method="post" action="/edit/<%= form_id%>">
    <div class="form-group">
        <label class="control-label col-sm-3">Date:</label>
        <div class="col-sm-4">
            <input type="date" class="form-control" id="date" name = "date" value=<%= date%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Vessel Name:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="vessel" name = "vessel" value=<%= vessel%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Group:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="group" name="group" value=<%= group%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Type:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="type" name="type" value=<%= type%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Country:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="country" name="country" value=<%= country%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Port:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="port" name="port" value=<%= port%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Insp. for Oil Major:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="insp" name="insp" value=<%= insp%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Name of company Inspector:</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="company_insp" name="company_insp" value=<%= company_insp%>>
        </div>
    </div>
    <h4>Inspector</h4> 
    <div class="form-group">
        <label class="control-label col-sm-3">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="insp_fn" name="insp_fn" value=<%= insp_fn%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="insp_ln" name="insp_ln" value=<%= insp_ln%>>
        </div>
    </div>
    <h4>Master</h4> 
    <div class="form-group">
        <label class="control-label col-sm-3">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="master_fn" name="master_fn" value=<%= master_fn%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="master_ln" name="master_ln" value=<%= master_ln%>>
        </div>
    </div>
    <h4>Chief Eng.</h4> 
    <div class="form-group">
        <label class="control-label col-sm-3">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="cheng_fn" name="cheng_fn" value=<%= cheng_fn%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="cheng_ln" name="cheng_ln" value=<%= cheng_ln%>>
        </div>
    </div>
    <h4>Chief Officer</h4> 
    <div class="form-group">
        <label class="control-label col-sm-3">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="choff_fn" name="choff_fn" value=<%= choff_fn%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="choff_ln" name="choff_ln" value=<%= choff_ln%>>
        </div>
    </div>
    <h4>A.E</h4>
    <div class="form-group">
        <label class="control-label col-sm-3">First Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="ae_fn" name="ae_fn" value=<%= ae_fn%>>
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-3">Last Name</label>
        <div class="col-sm-4">
            <input type="text" class="form-control" id="ae_ln" name="ae_ln" value=<%= ae_ln%>>
        </div>
    </div>
    <br>
    <div class="col text-center">
        <button type="submit" class="btn btn-primary btn-lg">Save</button>
    </div>
    </form>
</div>
